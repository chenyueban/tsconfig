{
  "name": "@chenyueban/tsconfig",
  "version": "0.1.1",
  "description": "tsconfig.json inheritance via Node.js packages",
  "tsconfig": "tsconfig.json",
  "scripts": {
    "dist": "echo dist",
    "lint": "echo lint",
    "pack": "npm pack",
    "postinstall": "node bin/install.js",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "jest",
    "update:deps": "yarn upgrade-interactive --latest",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chenyueban/tsconfig.git"
  },
  "keywords": ["tsconfig", "base", "inheritance", "share"],
  "author": {
    "name": "chenyueban",
    "email": "jasonchan0527@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chenyueban/tsconfig/issues"
  },
  "homepage": "https://github.com/chenyueban/tsconfig#readme",
  "peerDependencies": {
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "pkg-up": "^3.1.0"
  },
  "devDependencies": {
    "@chenyueban/lint": "^0.1.2",
    "@types/jest": "^26.0.20",
    "@types/json5": "0.0.30",
    "cz-conventional-changelog": "3.3.0",
    "file-box": "^0.16.4",
    "husky": "^4.3.8",
    "is-my-json-valid": "^2.20.5",
    "jest": "^26.6.3",
    "json5": "^2.1.3",
    "lint-staged": "^10.5.3",
    "pkg-jq": "^0.2.4",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "ts-jest": "^26.4.4"
  },
  "files": ["tsconfig.json", "bin/install.js"],
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{*.json,.{eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
